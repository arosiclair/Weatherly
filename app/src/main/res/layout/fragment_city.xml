<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/abc_action_bar_default_height_material"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:background="@color/material_deep_teal_200">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="City Name"
        android:id="@+id/city_name"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textIsSelectable="false"

        android:textAlignment="center"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="32sp"
        android:shadowColor="@android:color/black"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="1.0"/>

    <!-- Root Vertical Layout For Card -->
    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="256dp"
        android:background="@drawable/background_card"
        android:orientation="vertical">

        <!-- Current Conditions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingTop="16dp">

            <!-- Right Now Label -->
            <TextView
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Right Now"
                android:textColor="@color/abc_secondary_text_material_light"
                android:textIsSelectable="false"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Current Temp and Conditions -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="76dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/current_temp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="72"
                    android:textColor="@color/abc_primary_text_material_light"
                    android:textIsSelectable="false"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/current_conditions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Clear"
                    android:textColor="@color/abc_secondary_text_material_light"
                    android:textIsSelectable="false"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Grid Layout Containing Forecast Details -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:columnCount="2"
            android:rowCount="2">

            <!-- Feels Like Detail Block -->
            <LinearLayout
                android:layout_width="164dp"
                android:layout_height="84dp"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/darker_gray" />

                <!-- Details -->
                <LinearLayout
                    android:layout_width="84dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:text="Feels Like"
                        android:textSize="12sp"
                        android:textColor="@color/abc_secondary_text_material_light"
                        android:gravity="bottom" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:text="70Â°"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="bottom"
                        android:id="@+id/feels_like_temp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Wind Detail Block -->
            <LinearLayout
                android:layout_width="164dp"
                android:layout_height="84dp"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/darker_gray"/>

                <!-- Details -->
                <LinearLayout
                    android:layout_width="84dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:text="Wind"
                        android:textSize="12sp"
                        android:textColor="@color/abc_secondary_text_material_light"
                        android:gravity="bottom" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:text="3 mph"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="bottom"
                        android:id="@+id/wind_speed" />
                </LinearLayout>

            </LinearLayout>

            <!-- Humidity Detail Block -->
            <LinearLayout
                android:layout_width="164dp"
                android:layout_height="84dp"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/darker_gray"/>

                <!-- Details -->
                <LinearLayout
                    android:layout_width="84dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:text="Humidity"
                        android:textSize="12sp"
                        android:textColor="@color/abc_secondary_text_material_light"
                        android:gravity="bottom" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:text="58%"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="bottom"
                        android:id="@+id/humidity" />
                </LinearLayout>

            </LinearLayout>

            <!-- Visibility Detail Block -->
            <LinearLayout
                android:layout_width="164dp"
                android:layout_height="84dp"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/darker_gray"/>

                <!-- Details -->
                <LinearLayout
                    android:layout_width="84dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:text="Visibility"
                        android:textSize="12sp"
                        android:textColor="@color/abc_secondary_text_material_light"
                        android:gravity="bottom" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:text="10 mi."
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="bottom"
                        android:id="@+id/visibility" />
                </LinearLayout>

            </LinearLayout>

        </GridLayout>

        <!-- First Row of Details -->

    </LinearLayout>

</LinearLayout>